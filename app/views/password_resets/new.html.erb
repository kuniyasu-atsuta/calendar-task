<% provide(:title, "パスワードリセット") %>
<% provide(:css, (stylesheet_link_tag 'bootstrap.min',
                                      'icons',
                                      'style.css')) %>
<% provide(:js1, (javascript_include_tag 'modernizr.min')) %>


<div class="account-pages"></div>
<div class="clearfix"></div>
<div class="wrapper-page">
  <div class="text-center">
    <%= link_to '/', class: 'logo' do %>
    <span>Pian<span>ist</span></span>
    <% end %>
    <h5 class="text-muted m-t-0 font-600">作曲とピアノの学習サービス</h5>
  </div>
  <div class="m-t-20">
    <%= render 'shared/alert' %>
  </div>
  <div class="m-t-40 card-box">
    <div class="text-center">
      <h4 class="text-uppercase font-bold m-b-0">パスワードリセット</h4>

      <p class="text-muted m-b-0 font-13 m-t-20"> 登録しているメールアドレスを入力してください。<br>
        パスワードを再設定する手順を記載したメールが送信されます。 </p>
    </div>
    <div class="p-20">
      <%= form_for :password_reset, url: password_resets_path, class: 'form-horizontal m-t-20' do |f| %>

      <div class="form-group">
        <div class="col-xs-12">
          <%= f.email_field :email, class: 'form-control', placeholder: 'メールアドレス' %>
        </div>
      </div>

      <div class="form-group text-center m-t-20 m-b-0">
        <div class="col-xs-12">
          <%= f.submit "送信する", class: "btn btn-custom btn-bordred btn-block" %>
        </div>
      </div>

      <% end %>
      <!-- </form> -->
    </div>
  </div>
  <!-- end card-box-->

  <div class="row">
    <div class="col-sm-12 text-center">
      <p class="text-muted">アカウントを持っている方は
        <%= link_to login_path, class: 'text-primary m-l-5' do %>
        <b>こちらでログイン！</b>
        <% end %>
      </p>
    </div>
  </div>
</div>
<% provide(:js2, (javascript_include_tag 'jquery.min',
                                                 'popper.min',
                                                 'bootstrap.min',
                                                 'detect',
                                                 'fastclick',
                                                 'jquery.blockUI',
                                                 'waves',
                                                 'jquery.nicescroll',
                                                 'jquery.slimscroll',
                                                 'jquery.scrollTo.min',
                                                 'jquery.core',
                                                 'jquery.app')) %>
