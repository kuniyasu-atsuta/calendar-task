<% provide(:title, "ログイン") %>
<% provide(:css, (stylesheet_link_tag 'bootstrap.min',
                                      'icons',
                                      'style.css')) %>
<% provide(:js1, (javascript_include_tag 'modernizr.min')) %>

<div class="account-pages"></div>
<div class="clearfix"></div>
<div class="wrapper-page">
    <div class="text-center">
      <%= link_to '/', class: 'logo' do %>
        <span>Pian<span>ist</span></span>
      <% end %>
      <h5 class="text-muted m-t-0 font-600">作曲とピアノの学習サービス</h5>
    </div>
  	<div class="m-t-20">
      <%= render 'shared/alert' %>
    </div>
	   <div class="m-t-40 card-box">
        <div class="text-center">
            <h4 class="text-uppercase font-bold m-b-0">ログイン</h4>
        </div>
        <div class="p-20">
            <%= form_for(:session, url: login_path, html: {class: 'form-horizontal m-t-20'}) do |f| %>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <%= f.email_field :email, class: 'form-control', type: 'text',  placeholder: 'メールアドレス' %>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-12">
                            <%= f.password_field :password, class: 'form-control', type: 'password',  placeholder: 'パスワード'%>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-12">
                            <div class="checkbox checkbox-custom">
                              <%= f.check_box :remember_me, id: "checkbox-signup", type: "checkbox" %>
                              <%= f.label :remember_me, for: "checkbox-signup" do %> <!--class: "checkbox inline"-->
                                <span>ログイン状態を保持する</span>
                              <% end %>
                                <!-- <input id="checkbox-signup" type="checkbox">
                                <label for="checkbox-signup">
                                    Remember me
                                </label> -->
                            </div>

                        </div>
                    </div>

                    <div class="form-group text-center m-t-30">
                        <div class="col-xs-12">
                            <%= f.submit "ログイン", class: "btn btn-custom btn-bordred btn-block" %>
                        </div>
                    </div>

                    <div class="form-group m-t-30 m-b-0">
                        <div class="col-sm-12">
                            <%= link_to new_password_reset_path do %>
                              <i class="fa fa-lock m-r-5"></i> パスワードを忘れた方はこちら
                            <% end %>
                        </div>
                    </div>
            <% end %>
        </div>
    </div>
    <!-- end card-box-->

    <div class="row">
        <div class="col-sm-12 text-center">
            <p class="text-muted">アカウントを持っていない方は
              <%= link_to signup_path, class: 'text-primary m-l-5' do %>
                <b>こちらで新規登録！</b>
              <% end %>
            </p>
        </div>
    </div>

</div>
<!-- end wrapper page -->
<% provide(:js2, (javascript_include_tag 'jquery.min',
                                         'popper.min',
                                         'bootstrap.min',
                                         'detect',
                                         'fastclick',
                                         'jquery.blockUI',
                                         'waves',
                                         'jquery.nicescroll',
                                         'jquery.slimscroll',
                                         'jquery.scrollTo.min',
                                         'jquery.core',
                                         'jquery.app')) %>
